generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Collection{
  // membuat unik id
  id              Int @id @default(autoincrement())
  anime_mal_id    String
  user_email      String
  anime_image     String?  
  anime_title     String?  

  // user_email bisa punya banyak mal_id, tapi kalau mal_id sudah ada, tidak bisa dieksekusi lagi
  @@unique([user_email,anime_mal_id])
}

// untuk menambah ke database: 'npx prisma migrate dev'

// supaya projectnya bisa mengeksekusi prismanya: 'npx prisma generate'

// setup prisma di folder libs agar bisa dipakai

model Comment {
  id              Int @id @default(autoincrement())
  anime_mal_id    String
  user_email      String
  comment         String
  username        String
  anime_title     String
  user_profile    String
  rating          Int
}